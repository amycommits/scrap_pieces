<%= javascript_include_tag "application" %>
<h1>Listing Saved Searches</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Description</th>
      <th>Params</th>
      <th>Searched index</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @saved_searches.each do |saved_search| %>
      <tr>
        <td><%= saved_search.name %></td>
        <td><%= saved_search.user %></td>
        <td><%= saved_search.description %></td>
        <td><%= saved_search.params %></td>
        <td><%= saved_search.searched_index %></td>
        <td><%= link_to 'Show', saved_search %></td>
        <td><%= link_to 'Edit', edit_saved_search_path(saved_search) %></td>
        <td><%= link_to 'Destroy', saved_search, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

